<nav class="navbar">
  <a href="/">
    <%= image_tag "califindlogo.png", alt: 'califind logo', style: "width:170px; margin-left: 10px;" %>
  </a>
</nav>

<div class="card-container">
  <div class="card park">
    <img src="<%= @park.img_url %>">
  </div>
  <div class="card-content">
    <h4><strong><%= @park.name %></strong></h4>
    <h5><%= @park.location %></h5>
    <h5>Description: <%= @park.description %></h5>
  </div>
</div>

<div style="border-radius: 8px; margin: 20px auto; width: 80%; height: 92vh;"
  data-controller="map"
  data-map-markers-value="<%= @marker.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
